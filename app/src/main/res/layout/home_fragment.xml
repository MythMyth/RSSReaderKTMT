<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/header_bar"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="vnxpress"
            android:id="@+id/btVnxpress"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_normal"
            android:textColor="#ffffff"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="24h"
            android:id="@+id/bt24h"
            android:textSize="@dimen/text_size_normal"
            android:layout_weight="1"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vpgHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TabLayout
            android:id="@+id/tabNewsPaper"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_button_size"
            app:tabBackground="@color/backgroundActionBar"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/bottom_selected"
            app:tabIndicatorHeight="@dimen/tab_indicator_height"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/bottom_selected"
            app:tabTextAppearance="@style/TabTeaxtAppearance"
            app:tabTextColor="@color/bottom_unselected" />
    </android.support.v4.view.ViewPager>
</LinearLayout>